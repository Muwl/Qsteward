.title{
  font-size: 32rpx;
  color: #000000;
  padding: 35rpx 0rpx 0rpx 40rpx
}
.changeAvatar{
  display: flex;
  align-items:center;
  flex-direction: row;
  padding: 50rpx 0rpx 54rpx 0rpx
}
.infotext{
  width: 256rpx;
  height: 256rpx;
  border-radius:50%;
  overflow: hidden;
  margin: 0rpx 60rpx 0rpx 40rpx
}
.infotext image{
  width: 100%;
  height: 100%
}
.name{
  font-size: 30rpx;
  color: #000
}
.changeInformation{
  display: flex;
  flex-direction: column;
  margin: 0rpx 40rpx 0rpx 40rpx;
}
.informationList{
  flex: 1;
  flex-direction: column;
  margin-bottom: 30rpx
}
.subHeader{
  font-size: 24rpx;
  color: #ADC6FF;
  margin-left: 30rpx;
}
.phone{
  flex: 1;
  font-family: PingFangSC;
  font-size: 24rpx;
  color: #000000;
  margin:12rpx 0rpx 12rpx 30rpx;
  line-height: 24rpx
}
.line{
  flex: 1;
  height: 1rpx;
  opacity: .5;
  border-bottom: 1px solid #E3EDF3;
}
.changeBtn{
  width: 585rpx;
  height: 88rpx;
  background: #EA8383;
  box-shadow: 0 1px 15px 0 rgba(0,0,0,0.15);
  border-radius: 100px;
  line-height: 88rpx;
  margin: 28rpx auto 0rpx
}
.change-btn{
  display: block;
  text-align: center;
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #FFFFFF;
}